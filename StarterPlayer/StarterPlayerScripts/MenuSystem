local function updateGrid()
	local gridWidth = invGrid.AbsoluteSize.X
	if gridWidth <= 0 then return end
	local sizePx = gridWidth * 0.18
	local paddingPx = gridWidth * 0.015
	gridLayout.CellSize = UDim2.new(0, sizePx, 0, sizePx)
	gridLayout.CellPadding = UDim2.new(0, paddingPx, 0, paddingPx)
end
invGrid:GetPropertyChangedSignal("AbsoluteSize"):Connect(updateGrid)

local function refreshStats()
	lvlLabel.Text = "Lv. " .. myStats.Level
	goldLabel.Text = "G: " .. myStats.Gold
	spLabel.Text = "SP: " .. myStats.StatPoints

	statListText.Text = string.format(
		"âš”ï¸ Attack: %d\nğŸ›¡ï¸ Defense: %d\nâ¤ï¸ Max HP: %d\nâš¡ Agility: %d\nğŸ§  Intellect: %d\n\nâœ¨ Exp: %d / %d",
		myStats.Attack, myStats.Defense, myStats.MaxHP, myStats.Agility, myStats.Intellect, myStats.Exp, myStats.MaxExp
	)

	for _, btnData in pairs(upButtons) do
		btnData.label.Text = btnData.name .. " : " .. myStats[btnData.key]
		if myStats.StatPoints > 0 then
			btnData.btn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
			btnData.btn.Active = true
		else
			btnData.btn.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
			btnData.btn.Active = false
		end
	end
end

for _, btnData in pairs(upButtons) do
	btnData.btn.MouseButton1Click:Connect(function()
		if myStats.StatPoints > 0 then
			myStats.StatPoints = myStats.StatPoints - 1
			myStats[btnData.key] = myStats[btnData.key] + 1
			refreshStats()
		end
	end)
end

function refreshEquipment()
	for slotName, btn in pairs(equipButtons) do
		local item = equippedData[slotName]
		if item then
			btn.Text = item.icon .. "\n" .. item.name .. "\n(" .. item.stat .. ")"
			btn.BackgroundColor3 = Color3.fromRGB(100, 150, 255) 
		else
			local defaultIcon = ""
			for _, s in ipairs(slots) do if s.Name == slotName then defaultIcon = s.Icon end end
			btn.Text = defaultIcon .. "\n" .. slotName
			btn.BackgroundColor3 = Color3.fromRGB(80, 80, 80) 
		end
	end
end

local function refreshInventory()
	for _, child in pairs(invGrid:GetChildren()) do if child:IsA("TextButton") then child:Destroy() end end

	local groupedItems = {}
	local displayList = {}

	for _, item in ipairs(inventoryData) do
		local showItem = false
		if currentTab == "Equip" then
			if item.type ~= "Material" then showItem = true end
		elseif currentTab == "Material" then
			if item.type == "Material" then showItem = true end
		end

		if showItem then
			if not groupedItems[item.name] then
				local entry = { count = 1, data = item }
				groupedItems[item.name] = entry
				table.insert(displayList, entry)
			else
				groupedItems[item.name].count = groupedItems[item.name].count + 1
			end
		end
	end

	for _, entry in ipairs(displayList) do
		local item = entry.data
		local count = entry.count
		local itemBtn = Instance.new("TextButton")
		itemBtn.Name = item.name
		itemBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
		itemBtn.Text = item.icon
		itemBtn.TextScaled = true 
		itemBtn.Parent = invGrid

		local ic = Instance.new("UICorner"); ic.Parent = itemBtn

		local nameLbl = Instance.new("TextLabel")
		nameLbl.Size = UDim2.new(1,0,0.3,0)
		nameLbl.Position = UDim2.new(0,0,0.7,0)
		nameLbl.BackgroundTransparency = 1
		nameLbl.Text = item.name
		nameLbl.TextColor3 = Color3.new(1,1,1)
		nameLbl.TextScaled = true
		nameLbl.Parent = itemBtn

		if count > 1 then
			local countLbl = Instance.new("TextLabel")
			countLbl.Size = UDim2.new(0.4, 0, 0.4, 0)
			countLbl.Position = UDim2.new(1, -2, 1, -2) 
			countLbl.AnchorPoint = Vector2.new(1, 1)
			countLbl.BackgroundTransparency = 1
			countLbl.Text = "x" .. count
			countLbl.TextColor3 = Color3.fromRGB(255, 255, 0) 
			countLbl.TextStrokeTransparency = 0
			countLbl.Font = Enum.Font.GothamBlack
			countLbl.TextScaled = true
			countLbl.Parent = itemBtn
		end

		itemBtn.MouseButton1Click:Connect(function()
			if item.type == "Material" then return end
			local slotType = item.type
			if equippedData[slotType] == nil then
				for idx, v in ipairs(inventoryData) do
					if v.name == item.name then
						table.remove(inventoryData, idx)
						break
					end
				end
				equippedData[slotType] = item
				refreshUI() 
			else
				print("âš ï¸ ë¨¼ì € ì¥ë¹„ë¥¼ í•´ì œí•˜ì„¸ìš”.")
			end
		end)
	end
end

refreshUI = function()
	for id, btn in pairs(tabButtons) do
		btn.BackgroundColor3 = (id == currentTab) and Color3.fromRGB(100, 100, 100) or Color3.fromRGB(60, 60, 60)
	end

	if currentTab == "Stat" then
		invGrid.Visible = false
		statsInfoFrame.Visible = true 
		equipFrame.Visible = false
		statUpFrame.Visible = true    
	else
		invGrid.Visible = true        
		statsInfoFrame.Visible = false
		equipFrame.Visible = true     
		statUpFrame.Visible = false
		refreshInventory()
	end

	refreshEquipment()
	refreshStats()
end

for slotName, btn in pairs(equipButtons) do
	btn.MouseButton1Click:Connect(function()
		local item = equippedData[slotName]
		if item then
			equippedData[slotName] = nil
			table.insert(inventoryData, item) 
			refreshUI()
		end
	end)
end

menuButton.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
	if mainFrame.Visible then task.wait(0.01); updateGrid(); refreshUI() end
end)

combatEvent.OnClientEvent:Connect(function(action, data)
	if action == "Reward" then
		if data.gold then myStats.Gold = myStats.Gold + data.gold end

		-- [ìˆ˜ì •] ê²½í—˜ì¹˜ & ë ˆë²¨ì—… ì‹œìŠ¤í…œ (1.2ë°° ì¦ê°€ìœ¨ ì ìš©)
		if data.exp then
			myStats.Exp = myStats.Exp + data.exp
			print("âš¡ EXP íšë“: " .. data.exp)

			-- ë ˆë²¨ì—… ë°˜ë³µ ì²˜ë¦¬ (í•œ ë²ˆì— ì—¬ëŸ¬ ë ˆë²¨ ì˜¤ë¥¼ ê²½ìš° ëŒ€ë¹„)
			while myStats.Exp >= myStats.MaxExp do
				myStats.Level = myStats.Level + 1
				myStats.Exp = myStats.Exp - myStats.MaxExp

				-- ë ˆë²¨ì—… ì‹œ í•„ìš” ê²½í—˜ì¹˜ 20% ì¦ê°€ (ì •ìˆ˜ë¡œ ë‚´ë¦¼)
				myStats.MaxExp = math.floor(myStats.MaxExp * 1.2) 

				myStats.StatPoints = myStats.StatPoints + 3 -- ë³´ìƒìœ¼ë¡œ ìŠ¤íƒ¯ í¬ì¸íŠ¸ 3 ì§€ê¸‰
				print("ğŸ‰ LEVEL UP! Lv." .. myStats.Level .. " (ë‹¤ìŒ í•„ìš” ê²½í—˜ì¹˜: " .. myStats.MaxExp .. ")")
			end
		end

		if data.items then
			for _, newItemData in ipairs(data.items) do
				table.insert(inventoryData, {
					id = os.time(), name = newItemData.name, type = newItemData.type,
					stat = newItemData.stat, value = 0, icon = newItemData.icon
				})
			end
		end
		refreshUI()
	end
end)

updateGrid()
refreshUI()

print("âœ… ìµœì¢… ë©”ë‰´ ì‹œìŠ¤í…œ (ìŠ¤íƒ¯/ë ™ì—… í¬í•¨) ë¡œë“œ ì™„ë£Œ")
